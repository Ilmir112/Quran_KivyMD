#:import Button kivy.uix.button.Button
<SelectAyatButton>

    font_size: '30sp'
    background_color: 1, 1 ,1, 0
    on_release: app.select_ayat(self.text)
    canvas.before:
        Color:
            rgb:  40/255, 5/255, 109/255, 1
        RoundedRectangle:
            size: self.size
            pos: self.x, self.y + 5
            radius: [10]
MDScreen:
    name: 'select_ayat'
    MDFloatLayout:
        md_bg_color: rgba(10, 12, 10, 255)
        Image:
            source: 'data/logo/koran-oboi.jpg'
            size: 1, 1

        MDTopAppBar:
            title: "Qaran Academy"
            use_overflow: True
            panel_color: app.theme_cls.primary_color
#            overflow_cls: CustomOverFlowMenu()
            right_action_items:
                [
                ["home", lambda main: app.callback('main'), "Главная"],
#                ["cogs", lambda x: app.callback('setting'), "Настройки"],
                ["star-crescent", lambda x: app.callback('select_surah'), "Выбор игры"],
#                ["message-reply", lambda x: app.callback(x), "авторы"],

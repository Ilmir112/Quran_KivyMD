<LearnButton>
    font_size: '40sp'
    background_color: 1, 1 ,1, 0
    bg_color: rgba(0, 153, 0, 1)
    on_release: app.select_word(self.text, self)
    canvas.before:
        Color:
            rgb: root.bg_color
        RoundedRectangle:
            size: self.size
            pos: self.x, self.y + 5
            radius: [10]

MDScreen:
    word: word
    word1: word1
    transition_1: transition_1
    open_ayat: open_ayat
    name: 'learn'

    MDFloatLayout:
        md_bg_color: rgba( 60, 12, 156, 255)
        Image:
            source: 'data/logo/koran-oboi.jpg'
            size: 1, 1

        MDTopAppBar:
            title: "Quran Academy"
            use_overflow: True
            panel_color: app.theme_cls.primary_color
            pos_hint: {'center_x': .5, 'center_y': .10}


            right_action_items:
                [
                ["home", lambda main: app.callback('main'), "Главная"],
#                ["cogs", lambda x: app.callback('setting'), "Настройки"],
                ["star-crescent", lambda x: app.callback('select_surah'), "Выбор игры"],
#                ["message-reply", lambda x: app.callback(x), "авторы"],
                ]

        MDGridLayout:
            cols: 1
            rows: 6

            size_hint: .8, .7
            pos_hint: {'center_x': .5, 'center_y': .5}
            spacing: 15
            halign: 'center'
            valign: 'center'

            MDLabel:
                id: open_ayat
                text: ''
                font_size: '30sp'
                halign: 'center'
                pos_hint: {'center_x': .5, 'center_y': .5}
                color: 1, 1, 1, 1
                line_height: 1.1

            MDGridLayout:
                cols: 2
                rows: 1
                pos_hint: {'center_x': .4, 'center_y': .56}
                MDLabel:
                    id: word1
                    text: ''
                    font_size: '80sp'
                    font_name: "data/ttf/Noto_Naskh_Arabic/NotoNaskhArabic-VariableFont_wght.ttf"
                    halign: 'center'
                    # pos_hint: {'center_x': .4, 'center_y': .26}
                    color: 0, 0, 1, 1
                    line_height: 1.1

                MDIconButton:
                    icon: "pause-box"
                    on_press: app.play_word()
                    pos_hint: {'center_x': .4, 'center_y': .16}
                    icon_size: 48

            MDLabel:
                id: transition_1
                text: ''
                font_size: '40sp'
                halign: 'center'
                pos_hint: {'center_x': .4, 'center_y': .26}
                color: 0, 0, 1, 1
                line_height: 1.1

            MDLabel:
                id: word
                text: ''
                font_size: '40sp'

                halign: 'center'
                pos_hint: {'center_x': .4, 'center_y': .86}
                color: 0, 0, 1, 1
                line_height: 1.1



            Button:
                text: 'Следующее слово'
                halign: 'center'
                valign: 'center'
                font_size: '30sp'
                size_hint: .55, .55
                pos_hint: {'center_x': .5, 'center_y': .27}
                color: rgba(251, 187, 29, 255)
                background_color:1, 0, 25, 0
                on_release:
                    app.next_word()
                canvas.before:
                    Color:
                        rgb: 1, 1, 1, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.x, self.y + 5
                        radius: [10]

            Button:
                text: 'переход к викторине'

                font_size: '30sp'
                text_size: self.size
                halign: 'center'
                valign: 'center'
                size_hint: .55, .55
                pos_hint: {'center_x': .5, 'center_y': .17}
                color: rgba(25, 25, 29, 255)
                background_color:1, 0, 25, 0
                on_release:
                    app.quiz_game(self.text)
                canvas.before:
                    Color:
                        rgb: 1, 1, 1, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.x, self.y + 5
                        radius: [10]